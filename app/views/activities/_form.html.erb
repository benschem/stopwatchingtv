<%= form_with(model: activity) do |form| %>
  <% if activity.errors.any? %>
    <article class="flash flash-error">
      <strong>
        <%= pluralize(activity.errors.count, "error") %> prevented this activity from being saved:
      </strong>
      <ul>
        <% activity.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </article>
  <% end %>

  <fieldset role="group">
    <%= form.text_field :name,
          placeholder: "Going to the gym, reading a bookâ€¦",
          aria: { label: "Activity name" } %>

    <%= form.submit "Add to your list" %>
  </fieldset>
<% end %>
