<% content_for :title, "Stop Scrolling" %>

<% flash.each do |type, message| %>
  <% alert_class = case type.to_sym
     when :notice then "flash flash-success"
     when :alert  then "flash flash-error"
     else "alert"
     end %>

  <aside role="status" class="<%= alert_class %>">
    <%= message %>
  </aside>
<% end %>


<section class="intro">
  <h1>Stop scrolling.</h1>

  <p>
    When you’re bored, your phone offers the easiest possible option.
    This is a place to keep better ones.
  </p>

  <p>
    Add activities you enjoy or want to try. When you’re stuck,
    come back and let randomness decide.
  </p>
</section>

<section class="add-activity">
  <h2>Add an activity</h2>
  <%= render "form", activity: @activity %>
</section>

<section class="activities">
  <h2>Your activities</h2>

  <% if @activities %>
    <ul class="activity-list">
      <%= render @activities %>
    </ul>
  <% else %>
    <p class="empty-state">
      Nothing here yet. Add your first activity above.
    </p>
  <% end %>
</section>
